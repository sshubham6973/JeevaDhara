<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2"
    tools:context=".app_donate_blood">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="22dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:onClick="donate_back_pressed"
            app:srcCompat="@drawable/back_button" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate Blood!"
            android:textColor="@color/color_1"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every Blood donor is a Life Saver"
            android:textColor="@color/color_3"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView78"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:paddingStart="15sp"
                android:paddingEnd="5sp"
                android:text="@string/adb_01"
                android:textColor="@color/color_1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView79"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="26sp"
                android:paddingEnd="5sp"
                android:text="@string/adb_02"
                android:textColor="@color/color_1"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="26sp"
                android:paddingEnd="5sp"
                android:layout_marginBottom="10sp"
                android:text="@string/adb_03"
                android:textColor="@color/color_3"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="26sp"
                android:paddingEnd="5sp"
                android:text="@string/adb_04"
                android:textColor="@color/color_1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView82"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="26sp"
                android:paddingEnd="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text="@string/adb_05"
                android:textColor="@color/color_3"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView83"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="26sp"
                android:paddingEnd="26sp"
                android:layout_marginBottom="10sp"
                android:text="@string/adb_06"
                android:textColor="@color/color_1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView84"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="26sp"
                android:paddingEnd="26sp"
                android:layout_marginBottom="10sp"
                android:text="@string/adb_07"
                android:textColor="@color/color_1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:buttonTint="@color/color_3"
                android:text="@string/adb_08"
                android:textColor="@color/color_3"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView85"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="30sp"
                android:text="Donate"
                android:textColor="@color/color_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/donate_RBC"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="10sp"
                    android:buttonTint="#FFFFFF"
                    android:checked="true"
                    android:onClick="donate_selector"
                    android:text="RBC's"
                    android:textColor="@color/color_1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/donate_platelets"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:buttonTint="#FFFFFF"
                    android:text="Platelets"
                    android:textColor="@color/color_1"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView86"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="15sp"
                android:text="Verify yourself"
                android:textColor="@color/color_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:text="@string/sub_title_enter_password"
                android:textColor="@color/color_1"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/donate_password"
                android:layout_width="228dp"
                android:layout_height="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_edit_text_background"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLength="15"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/color_2"
                android:textCursorDrawable="@color/color_2"
                android:textIsSelectable="false"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView88"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:text="-> Enter PIN"
                android:textColor="@color/color_1"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/donate_pin"
                android:layout_width="159dp"
                android:layout_height="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/white_edit_text_background"
                android:ems="10"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:textColor="@color/color_2"
                android:textCursorDrawable="@color/color_2"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_schedule"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/yellow_button_background"
                android:text="Schedule"
                android:textAllCaps="false"
                android:textColor="@color/color_2"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>