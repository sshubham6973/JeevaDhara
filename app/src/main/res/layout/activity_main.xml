<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/main_scroll_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:paddingStart="10dp"
                android:textColor="@color/color_2"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10sp"
                android:text="@string/ma_01"
                android:textColor="@color/color_2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_blood"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:paddingStart="10sp"
                android:textColor="@color/color_2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10sp"
                android:text="@string/ma_02"
                android:textColor="@color/color_2"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="70dp"
                android:layout_height="71dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="13sp"
                android:onClick="show_dialog" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/main_scroll_bar"
        android:layout_width="383dp"
        android:layout_height="635dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5sp"
                android:text="@string/ma_03"
                android:textColor="@color/color_2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15sp"
                android:text="@string/ma_04"
                android:textColor="@color/color_2"
                android:textSize="10sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7sp"
                android:layout_marginTop="7dp"
                android:background="@color/front_card_yellow"
                android:padding="5dp"
                app:cardBackgroundColor="@color/front_card_yellow"
                app:cardCornerRadius="12sp">

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/critical_news_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:paddingStart="20sp"
                        android:textColor="@color/color_2"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/critical_news_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:paddingStart="20sp"
                        android:textColor="@color/color_2"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView57"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:paddingStart="5sp"
                android:text="@string/ma_07"
                android:textColor="@color/color_2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="157dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/main_donate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:background="@drawable/red_title_button_background"
                        android:padding="5sp"
                        android:text="@string/ma_08"
                        android:textColor="@color/color_1"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="5sp">

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="147dp"
                        android:layout_margin="5sp"
                        android:layout_marginBottom="1sp"
                        android:background="@drawable/red_title_button_background"
                        android:paddingStart="10sp"
                        android:paddingEnd="10sp"
                        android:text="RECEIVE BLOOD"
                        android:textAllCaps="false"
                        android:textColor="@color/color_1"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:paddingStart="5sp"
                android:text="@string/ma_10_1"
                android:textColor="@color/color_2"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="20sp"
                android:background="@drawable/card_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="88dp"
                    android:layout_height="109dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="40sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/report_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/color_2"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_report"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/user_image_male" />

                    <TextView
                        android:id="@+id/report_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:gravity="center"
                        android:textColor="@color/color_2"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="262dp"
                    android:layout_height="164dp"
                    android:layout_marginTop="12sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView47"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:paddingStart="10sp"
                        android:text="@string/ma_10_2"
                        android:textColor="@color/color_2"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/report_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:paddingStart="20sp"
                        android:textColor="@color/color_2"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="152dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="5sp">

                            <TextView
                                android:id="@+id/textView58"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:paddingStart="10sp"
                                android:text="@string/ma_10_3"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView59"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:text="@string/ma_10_4"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView60"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:text="@string/ma_10_5"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView61"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:text="@string/ma_10_6"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView62"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:text="@string/ma_10_7"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView63"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:text="@string/ma_10_8"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="5sp">

                            <TextView
                                android:id="@+id/report_hem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/report_rbc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/report_hct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/report_mcv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/report_mch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/report_mchc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:paddingStart="10sp"
                                android:textColor="@color/color_2"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="337dp"
                android:layout_height="67dp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="1sp"
                android:background="@drawable/red_title_button_background"
                android:padding="5sp"
                android:paddingStart="10sp"
                android:text="@string/ma_11"
                android:textAllCaps="false"
                android:textColor="@color/color_1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="337dp"
                android:layout_height="67dp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="1sp"
                android:background="@drawable/red_title_button_background"
                android:padding="5sp"
                android:paddingStart="10sp"
                android:text="@string/ma_12"
                android:textAllCaps="false"
                android:textColor="@color/color_1"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView70"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:paddingStart="5sp"
                android:text="Our Details"
                android:textColor="@color/color_2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="337dp"
                android:layout_height="78dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/main_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_margin="5sp"
                    android:layout_marginBottom="1sp"
                    android:background="@drawable/red_title_button_background"
                    android:text="Contact Us"
                    android:textAllCaps="false"
                    android:textColor="@color/color_1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView71"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:paddingStart="5sp"
                android:text="Our Branch locations"
                android:textColor="@color/color_2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView72"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15sp"
                android:text="@string/ma_13"
                android:textColor="@color/color_2"
                android:textSize="10sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/map_card"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="5sp"
                app:cardCornerRadius="22dp">
                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView73"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:paddingStart="5sp"
                android:text="@string/ma_14"
                android:textColor="@color/color_2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/main_founders"
                android:layout_width="337dp"
                android:layout_height="67dp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="1sp"
                android:background="@drawable/red_title_button_background"
                android:padding="5sp"
                android:paddingStart="10sp"
                android:text="@string/ma_15"
                android:textAllCaps="false"
                android:textColor="@color/color_1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView74"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:gravity="center"
                android:paddingStart="5sp"
                android:text="@string/ma_16"
                android:textColor="@color/color_2"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView75"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50sp"
                android:gravity="center"
                android:paddingStart="5sp"
                android:text="@string/ma_17"
                android:textColor="@color/color_2"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>